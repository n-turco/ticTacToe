<Window x:Class="ticTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ticTacToe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--Tic Tac Toe Board-->
    <Grid x:Name="GameBoard">

        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Board Cells -->
        <!-- Top -->
        <Button x:Name="TopLeft" Grid.Row="0" Grid.Column="0" FontSize="32" Click="TopLeft_Click"/>
        <Button x:Name="TopCenter" Grid.Row="0" Grid.Column="1" FontSize="32" Click="TopCenter_Click"/>
        <Button x:Name="TopRight" Grid.Row="0" Grid.Column="2" FontSize="32" Click="TopRight_Click"/>

        <!-- Middle -->
        <Button x:Name="MiddleLeft" Grid.Row="1" Grid.Column="0" FontSize="32" Click="MiddleLeft_Click"/>
        <Button x:Name="MiddleCenter" Grid.Row="1" Grid.Column="1" FontSize="32" Click="MiddleCenter_Click"/>
        <Button x:Name="MiddleRight" Grid.Row="1" Grid.Column="2" FontSize="32" Click="MiddleRight_Click"/>

        <!-- Bottom -->
        <Button x:Name="BottomLeft" Grid.Row="2" Grid.Column="0" FontSize="32" Click="BottomLeft_Click"/>
        <Button x:Name="BottomCenter" Grid.Row="2" Grid.Column="1" FontSize="32" Click="BottomCenter_Click"/>
        <Button x:Name="BottomRight" Grid.Row="2" Grid.Column="2" FontSize="32" Click="BottomRight_Click"/>


    </Grid>

</Window>
